{
  "name": "@vonage/js-workerizer",
  "version": "1.1.0",
  "description": "Library providing a simple way to run a class instance on its dedicated worker.",
  "types": "./dist/index.d.ts",
  "main": "./dist/js-workerizer.umd.js",
  "module": "./dist/js-workerizer.mjs",
  "scripts": {
    "build": "tsc && vite build",
    "typedoc": "typedoc --theme github-wiki src/index.ts",
    "prettier": "prettier --write ./src ./tests",
    "doc": "typedoc --excludeInternal --excludePrivate --excludeProtected --disableSources --out dist/docs src/index.ts",
    "test": "karma start --single-run",
    "test:debug": "karma start --browser ChromeHeadless_with_debugging"
  },
  "repository": {
    "type": "git",
    "url": "repo"
  },
  "keywords": [
    "vonage",
    "library",
    "worker"
  ],
  "author": {
    "name": "Remi Deltombe",
    "email": "remi.deltombe@vonage.com",
    "url": "https://www.vonage.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-spies": "^1.0.3",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.6",
    "karma": "^6.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-vite3": "^1.0.3",
    "mocha": "^10.0.0",
    "sinon": "^14.0.1",
    "typedoc": "^0.23.16",
    "typedoc-github-wiki-theme": "^1.0.1",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.4.1",
    "@types/mocha": "^10.0.0"
  }
}
